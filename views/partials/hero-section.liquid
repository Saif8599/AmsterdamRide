<section class="hero-section">
  <picture>
    <source srcset="../assets/{{ image-src }}" type="image/webp">
    <img
      src="../assets/{{ image-src }}"
      width="100"
      height="100"
      alt="{{ image-alt }}">
  </picture>

  <div class="hero-content">
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>

    {% if cta-text and cta-link %}
      <div class="cta-button">
        <a href="{{cta-link}}" class="button">{{ cta-text }}</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    height: 80vh;
  }

  .hero-section img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .hero-content {
    position: absolute;
    max-width: 500px;
    margin: 5em 2em 0;
    z-index: 1;
  }

  .hero-content h1 {
    font-size: var(--font-size-desktop-xl);
  }

  .hero-content p {
    font-size: var(--font-size-mobile-m);
  }

  .cta-button {
    margin-top: 5.5em;
  }

  .button {
    border-radius: 10px;
    padding: 12px 24px;
  }

  @media (min-width: 768px) {
    .hero-content {
      margin: 3em 15%;
      max-width: 700px;
    }
    .hero-content h1 {
      font-size: 5em;
    }

    .hero-content p {
      font-size: 1.5em;
      margin-top: 1em;
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      margin: 5em 15%;
      max-width: 700px;
    }

    .button {
      border-radius: 10px;
      padding: 10px 45px;
    }
  }
</style>